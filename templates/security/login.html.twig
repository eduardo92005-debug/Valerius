{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block banner_img %}'https://wallpaperaccess.com/full/105957.jpg'{% endblock %}
{% block banner_warning_text %}Login Service{% endblock %}
{% block banner_subtitle_text %}Here you need to authenticate to use functionality of the website!{% endblock %}
{% block body %}
<div class="wrapper">
    <div class="container my-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <!-- a door icon font awesome -->
            
            <h1 class="h3 mb-3 font-weight-normal text-center"> 
                <i class="fa fa-door-open fa-2x mb-1"></i>
                <br/>
                Please sign in
            </h1>
            <label for="inputEmail" class="mb-1">Email<span class="required text-danger">*</span></label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <br/>
            <label for="inputPassword" class="mt-2 mb-1">Password<span class="required text-danger">*</span></label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary w-100" type="submit">
                Sign in
            </button>
        </form>
    </div>
</div>
{% endblock %}
